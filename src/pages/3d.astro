---
import Layout from '../layouts/Layout.astro';
import FaradayGenerator3D from '../components/FaradayGenerator3D.astro';
---

<Layout title="3D Faraday's Law Simulation">
    <main>
        <FaradayGenerator3D />
        <div class="view-toggle">
            <a href="/" class="switch-button">Switch to 2D View</a>
        </div>
    </main>
</Layout>

<style>
    main {
        width: 100%;
        height: 100vh;
        margin: 0;
        padding: 0;
        overflow: hidden;
        position: relative;
    }

    .view-toggle {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
    }

    .switch-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-family: Arial, sans-serif;
        font-size: 14px;
        transition: background-color 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .switch-button:hover {
        background-color: rgba(0, 0, 0, 0.9);
    }
</style>
