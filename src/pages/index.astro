---
import Layout from '../layouts/Layout.astro';
import FaradayGenerator from '../components/FaradayGenerator.astro';
---

<Layout title="Faraday's Law Simulation">
    <main class="container">
        <h1>Electromagnetic Induction Simulator</h1>
        <p>
            This simulation demonstrates Faraday's Law of Electromagnetic Induction using a rotating wheel 
            with neodymium magnets and a copper coil. Adjust the controls to see how different parameters 
            affect the induced current.
        </p>
        
        <div class="view-toggle">
            <span>Current View: 2D</span>
            <a href="/3d" class="button">Switch to 3D View</a>
        </div>
        
        <FaradayGenerator />
    </main>
</Layout>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    h1 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 1rem;
    }

    p {
        color: #34495e;
        text-align: center;
        max-width: 800px;
        margin: 0 auto 2rem;
        line-height: 1.6;
    }

    .view-toggle {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .button {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .button:hover {
        background: #2980b9;
    }
</style>
